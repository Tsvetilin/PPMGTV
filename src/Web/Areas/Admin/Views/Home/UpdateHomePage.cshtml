@model SettingInputModel

@{
    ViewData[TitleViewDataParam] = "Администраторска секция";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-auto text-center">
    <h1 class="font-weight-bold">
        Редактирай началната страница
    </h1>
</div>

<hr />
<div class="row">
    <div class="col-md-10 mx-auto">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHomePageNewsVisible" /> @Html.DisplayNameFor(model => model.IsHomePageNewsVisible)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHomePageLastGalleryVisible" /> @Html.DisplayNameFor(model => model.IsHomePageLastGalleryVisible)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHomePageGalleryPreTextVisible" /> @Html.DisplayNameFor(model => model.IsHomePageGalleryPreTextVisible)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHomePageGalleryPostTextVisible" /> @Html.DisplayNameFor(model => model.IsHomePageGalleryPostTextVisible)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="HomePageNewsSectionTitle" class="control-label"></label>
                <input asp-for="HomePageNewsSectionTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HomePageNewsPreContent" class="control-label"></label>
                <textarea asp-for="HomePageNewsPreContent" class="form-control edit-with-tinymce"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="HomePageNewsContent" class="control-label"></label>
                <textarea asp-for="HomePageNewsContent" class="form-control edit-with-tinymce"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" onclick="return confirm('Сигурен ли си, че искаш да запишете направените промени?');" />
            </div>
        </form>
    </div>
</div>
<a asp-area="Admin" asp-controller="Home" asp-action="Index">Назад / Отказ</a>

@section Scripts {

    @{await Html.RenderPartialAsync("_EditorPartial"); }
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}