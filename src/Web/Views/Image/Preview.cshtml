@model ImageViewModel

<div class="m-auto text-center">
    <h1 class="font-weight-bold">
        Преглед на снимка
    </h1>
</div>

<hr />
<div class="row">
    <div class="mx-auto">
        <input type="text" class="disabled w-75" readonly id="url" value="@Model.Url" data-toggle="popover" title="Копирано" data-content="Копирано"/>
        <button class="btn btn-outline-primary" onclick="copy()">Копирай</button>
        <img src="@Model.Url" />
        <p>Категория: @Model.Category.ToString()</p>
        <p>Бележка: @Model.Note</p>
        <p>Описание: @Model.Description</p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    function copy() {
        var copyText = document.getElementById("url");
        copyText.select();
        copyText.setSelectionRange(0, 99999);
        document.execCommand("copy");
        //alert("Copied the text: " + copyText.value);
    }

    $(function () {
        $('[data-toggle="popover"]').popover()
    })
</script>
}