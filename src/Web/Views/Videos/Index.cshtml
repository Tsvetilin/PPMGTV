@model Web.Models.Videos.VideosIndexViewModel
@using static Common.Helpers.TimeZoneConverter
@{
    ViewData["Title"] = "Home Page";
}

<div class="m-auto text-center">
    <h1 class="font-weight-bold">
        Всички излъчвани емисии
    </h1>
</div>

<ul class="list-inline text-dark">
    @foreach (var videoCard in Model?.Videos)
    {
        <li class="pb-3 text-decoration-none">
            <a asp-controller="Videos" asp-action="Watch" asp-route-id="@videoCard.Id"
               class="content-heading clearfix media box-hover text-decoration-none">
                <img class="rounded float-left h-25 w-25 ml-auto" src="@videoCard.ThumbnailUrl" alt="Video Thumbnail">
                <div class="col-md-6 ml-4">
                    <h3>@videoCard.Title</h3>
                    <p>@videoCard.Description</p>
                    <p>Излъчено на: @videoCard.PremiredOn.ConvertToLocal()</p>
                </div>
            </a>
        </li>
    }
</ul>

<nav>
    <ul class="pagination justify-content-center" style="padding-top:30px; margin-bottom:0px;">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="filmsList" asp-route-id="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @for (int i = 1; i <= this.Model.PagesCount; i++)
        {
            var active = i == this.Model.CurrentPage ? "active" : String.Empty;
            <li class="page-item @active">
                <a class="page-link"
                   asp-route="filmsList" asp-route-id="@i">@i</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="filmsList" asp-route-id="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>